/* pages/index/SpecialSale/SpecialSale.wxss */
@import "/wxParse/wxParse.wxss";
.navbar {
  border-bottom: 1px solid #efefef;
  position: relative;
}

.shu {
  width: 3rpx;
  position: absolute;
  top: 17rpx;
}

.pos1 {
  left: 33%;
}

.pos2 {
  right: 33%;
}

.item {
  width: 30%;
  height: 80rpx;
  display: inline-block;
  color: #727171;
  margin-left: 2.5%;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-bottom: #fff solid 6rpx;
}

.navbar .item.active {
  color: #797979;
  border-bottom: #818181 solid 6rpx;
}

.list {
  padding: 32rpx 42rpx;
  position: relative;
  color: #4b4b4b;
  border-bottom: #efefef 1px solid;
}

.tu {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.name {
  font-size: 24rpx;
  display: block;
}

.tip {
  display: block;
  position: absolute;
  bottom: 34rpx;
  left: 270rpx;
  font-size: 30rpx;
  color: red;
}

.lei {
  font-size: 26rpx;
}

.date {
  color: #c6c6c6;
  font-size: 24rpx;
}

.atten {
  width: 40rpx;
  position: absolute;
  bottom: 77rpx;
  right: 40rpx;
}

.xiangqing {
  position: absolute;
  bottom: 34rpx;
  right: 47rpx;
}

.orange {
  color: #f29532;
  font-size: 26rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.choose {
  border-bottom: 6rpx solid #f7f7f7;
}

.choose .active {
  font-weight: bold;
}

.you {
  width: 16rpx;
  vertical-align: middle;
}

.btn {
  font-size: 28rpx;
  border-radius: 3px;
  width: 125rpx;
  height: 70rpx;
  color: #bfbfbf;
  display: inline-block;
  text-align: center;
  line-height: 70rpx;
}

.active {
  color: #575757;
}

.red {
  color: red;
}

.none {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
}
