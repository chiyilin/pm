/* pages/transaction/transaction.wxss */

.navbar {
  border-bottom: 1px solid #efefef;
}

.item {
  width: 20%;
  height: 80rpx;
  display: inline-block;
  color: #727171;
  margin-left: 10%;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-bottom: #fff solid 6rpx;
}

.navbar .item.active {
  color: #797979;
  border-bottom: #818181 solid 6rpx;
}

.list {
  padding: 32rpx 42rpx;
  position: relative;
  color: #4b4b4b;
  border-bottom: #efefef 1px solid;
}

.tu {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.name {
  font-size: 26rpx;
  display: block;
}

.time {
  font-size: 26rpx;
  border-radius: 5px;
  padding: 0rpx 5rpx;
}

.tip {
  display: block;
  position: absolute;
  bottom: 34rpx;
  left: 270rpx;
  font-size: 34rpx;
  color: red;
}

.atten {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 77rpx;
  right: 40rpx;
}
