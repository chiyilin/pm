/* pages/article/details/details.wxss */
@import "/wxParse/wxParse.wxss";

.title {
  font-size: 32rpx;
  margin: 20rpx 20rpx 0 20rpx;
}

.date {
  display: block;
  font-size: 24rpx;
  margin-top: 20rpx;
  color: #676666;
}

label {
  padding: 0 3%;
}

image {
  width: 100%;
  vertical-align: middle;
}

.text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #676666;
  text-indent: 2em;
  margin-bottom: 10rpx;
}

.fen {
  width: 33rpx;
  display: inline-block;
  height: 30rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0);
  vertical-align: middle;
  position: absolute;
  right: 120rpx;
  top: 60rpx;
  padding: 0;
}

button::after {
  border: none;
  background-color: none;
}

.stext {
  margin-right: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.share {
  margin-top: -70rpx;
  margin-right: 20rpx;
}

.shareimg {
  width: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.back {
  width: 60rpx;
  padding: 5rpx 10rpx;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  right: 0rpx;
  bottom: 200rpx;
  color: #fff;
  text-align: center;
  height: 70rpx;
  line-height: 35rpx;
  border-radius: 2px;
}
