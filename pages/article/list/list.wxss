/* pages/article/list/list.wxss */

.item {
  width: 15%;
  height: 57rpx;
  display: inline-block;
  color: #bebebe;
  font-size: 30rpx;
  text-align: center;
  margin-left: 30rpx;
  padding: 5rpx 0;
  margin-top: 10rpx;
  line-height: 55rpx;
  border-bottom: 3rpx solod #fff;
}

.navbar {
  white-space: nowrap;
  height: 75rpx;
}

scroll-view {
  border-bottom: 1px solid #dcdcdc;
}

.navbar .item.active {
  color: #727171;
  border-bottom: 2px solid #727171;
}

.list {
  padding: 20rpx 47rpx 35rpx 47rpx;
  position: relative;
  line-height: 70rpx;
  background-color: #fff;
  height: 120rpx;
}

.list::after {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #e6e6e6;
  content: ' ';
  display: block;
  transform: scaley(0.5);
}

image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.lv {
  margin-top: 10rpx;
}

.title {
  font-size: 30rpx;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 500rpx;
  overflow: hidden;
  height: 32rpx;
  line-height: 32rpx;
  vertical-align: middle;
}

.date {
  font-size: 24rpx;
  color: #8d8d8d;
  position: absolute;
  left: 47rpx;
  bottom: 0rpx;
}

.content {
  font-size: 24rpx;
  color: #8d8d8d;
  height: 50rpx;
  margin-right: 160rpx;
  width: 500rpx;
  overflow: hidden;
  margin-top: -20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 47rpx;
  top: 75rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.pict {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
