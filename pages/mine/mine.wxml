<!--pages/mine/mine.wxml-->
<view class='top'>
  <image mode='widthFix' src='/imgs/mineimg1.jpg'></image>
  <image mode='widthFix' src='/imgs/mineimg2.jpg'></image>
</view>
<!--头像-->
<view class='ziliao'>
  <image class='tou' mode='widthFix' src='{{userinfo.face}}'></image>
  <text class='name'>{{userinfo.nick_name}}</text>
  <view class='edu'>
    <text>【竞拍额度</text>
    <text class='color'>{{userinfo.lines}}</text>
    <text>】</text>
  </view>
</view>
<!--nav-->
<view class='navBox'>
  <view class='navView' bindtap='pay' data-current='0'>
    <image src='/imgs/mineimg4.jpg'></image>
    <text>待支付</text>
    <text class='num' wx:if="{{myProdInfo.countGetProd}}">{{myProdInfo.countGetProd}}</text>
  </view>
  <image class='shu' mode='widthFix' src='/imgs/shu.jpg'></image>
  <view class='navView' bindtap='pay' data-current='1'>
    <image src='/imgs/mineimg5.jpg'></image>
    <text>待发货</text>
    <text class='num' wx:if="{{myProdInfo.countExpressProd}}">{{myProdInfo.countExpressProd}}</text>
  </view>
  <image class='shu' mode='widthFix' src='/imgs/shu.jpg'></image>
  <view class='navView' bindtap='pay' data-current='2'>
    <image src='/imgs/mineimg3.jpg'></image>
    <text>待收货</text>
    <text class='num' wx:if="{{myProdInfo.countConfirmProd}}">{{myProdInfo.countConfirmProd}}</text>
  </view>
</view>
<view class='lanmu'>
  <view class='list'>
    <view class='LL'>
      <image bindtap='attention' mode='widthFix' src='/imgs/wdgz.jpg'></image>
      <text bindtap='attention'>我的关注</text>
    </view>
    <view class='LL'>
      <image bindtap='card' mode='widthFix' src='/imgs/yhkq.jpg'></image>
      <text bindtap='card'>优惠卡券</text>
    </view>
    <view class='LL'>
      <image bindtap='note' mode='widthFix' src='/imgs/jyjl.jpg'></image>
      <text bindtap='note'>交易记录</text>
    </view>
    <view class='LL'>
      <image mode='widthFix' src='/imgs/rzmx.jpg'></image>
      <text>入住即拍</text>
    </view>
  </view>
  <view class='list'>
    <view class='LL'>
      <image mode='widthFix' src='/imgs/syjc.jpg'></image>
      <text>使用教程</text>
    </view>
    <view class='LL'>
      <image mode='widthFix' src='/imgs/cpbz.jpg'></image>
      <text>藏品保障</text>
    </view>
    <view class='LL'>
      <image mode='widthFix' src='/imgs/bzzx.jpg'></image>
      <text>帮助中心</text>
    </view>
    <view class='LL'>
      <image mode='widthFix' src='/imgs/gywm.jpg'></image>
      <text>关于我们</text>
    </view>
  </view>
</view>