    <view class='LL'>
      <image bindtap='card' mode='widthFix' src='/imgs/yhkq.jpg'></image>
      <text bindtap='card'>优惠卡券</text>
    </view>
    <view class='LL'>
      <image bindtap='note' mode='widthFix' src='/imgs/jyjl.jpg'></image>
      <text bindtap='note'>交易记录</text>
    </view>
    <view class='LL'>
