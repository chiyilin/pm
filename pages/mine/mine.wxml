<!--pages/mine/mine.wxml-->
<view class='top'>
  <image mode='widthFix' src='/imgs/mineimg1.jpg'></image>
  <image mode='widthFix' src='/imgs/mineimg2.jpg'></image>
</view>
<!--头像-->
<view class='ziliao'>
  <image class='tou' mode='widthFix' src='{{userinfo.face}}'></image>
  <text class='name'>{{userinfo.nick_name}}</text>
  <view class='edu'>
    <text>【自营额度</text>
    <text class='color'>{{userinfo.lines}}</text>
    <text>】</text>
  </view>
</view>
<!--nav-->
<view class='navBox'>
  <view class='navView'>
    <image bindtap='pay' src='/imgs/mineimg4.jpg'></image>
    <text bindtap='pay'>待支付</text>
    <text class='num'>13</text>
  </view>
  <image class='shu' mode='widthFix' src='/imgs/shu.jpg'></image>
  <view class='navView'>
    <image bindtap='pay' src='/imgs/mineimg5.jpg'></image>
    <text bindtap='pay'>待发货</text>
    <text class='num'>13</text>
  </view>
  <image class='shu' mode='widthFix' src='/imgs/shu.jpg'></image>
  <view class='navView'>
    <image bindtap='pay' src='/imgs/mineimg3.jpg'></image>
    <text bindtap='pay'>待收货</text>
  </view>
</view>
