}

.new {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.new button {
  color: #575757;
}

.bianji {
  width: 40rpx;
  float: right;
  margin-top: -80rpx;
  margin-right: 20rpx;
}

